<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/design_default_color_surface</item>
        <item name="backgroundTint">#009DE4</item>
        <item name="cornerRadius">70dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/design_default_color_surface</item>
        <item name="android:textColorHint">@color/design_default_color_surface</item>
        <item name="android:textSize">22dp</item>
    </style>

    <!--    <style name="StatusBar">-->
    <!--        <item name="android:toolbarStyle">#009DE4</item>-->
    <!--    </style>-->

    <style name="TextStyleHistory">
        <item name="android:textColor">@color/design_default_color_surface</item>
        <item name="android:textColorHint">@color/design_default_color_surface</item>
        <item name="android:textSize">30dp</item>
    </style>
